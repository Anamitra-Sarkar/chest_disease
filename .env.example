# Groq API Key for LLM interpretation
# Get your key from: https://console.groq.com/
GROQ_API_KEY=your_groq_api_key_here

# Path to the PyTorch model file
# Download from: https://github.com/Arko007/chexpert-cnn-from-scratch
# The model file should be named: epoch_001_mAUROC_0.486525.pth
MODEL_PATH=epoch_001_mAUROC_0.486525.pth

# Inference device: 'cpu' or 'cuda'
# Use 'cpu' for compatibility, 'cuda' for GPU acceleration
INFERENCE_DEVICE=cpu

# Port for the backend API
PORT=8000

# Frontend API URL (for Next.js)
NEXT_PUBLIC_API_URL=http://localhost:8000
